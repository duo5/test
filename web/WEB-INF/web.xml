<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ProductCategoryController</servlet-name>
        <servlet-class>controller.CategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductListController</servlet-name>
        <servlet-class>controller.ProductListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetailController</servlet-name>
        <servlet-class>controller.ProductDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductTypeController</servlet-name>
        <servlet-class>controller.ProductTypeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckFullNameController</servlet-name>
        <servlet-class>controller.CheckFullNameController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckEmailController</servlet-name>
        <servlet-class>controller.CheckEmailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckUserNameController</servlet-name>
        <servlet-class>controller.CheckUserNameController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckPasswordController</servlet-name>
        <servlet-class>controller.CheckPasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductRegisterController</servlet-name>
        <servlet-class>controller.ProductRegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductLoginController</servlet-name>
        <servlet-class>controller.ProductLoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductLogoutController</servlet-name>
        <servlet-class>controller.ProductLogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductCartController</servlet-name>
        <servlet-class>controller.ProductCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductCheckoutController</servlet-name>
        <servlet-class>controller.ProductCheckoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductCategoryController</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductListController</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetailController</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductTypeController</servlet-name>
        <url-pattern>/type</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckUserNameController</servlet-name>
        <url-pattern>/checkUserName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckEmailController</servlet-name>
        <url-pattern>/checkEmailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckFullNameController</servlet-name>
        <url-pattern>/checkFullName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckPasswordController</servlet-name>
        <url-pattern>/checkpassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductRegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductLoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductLogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductCartController</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductCheckoutController</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
